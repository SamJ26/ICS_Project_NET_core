<Window x:Class="FilmManagment.GUI.Views.DetailViews.FilmDetailView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FilmManagment.GUI.Views.DetailViews"
        mc:Ignorable="d"
        Title="FilmDetailView" Height="450" Width="800">
    <Grid x:Name="DetailFilmLayout"
          Background="#FF353C4D">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="2"
                   FontSize="30"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" Height="40" Width="60" Grid.ColumnSpan="2" Margin="5">
            <Bold Foreground="Orange">Film</Bold>
        </TextBlock>

        <TextBlock FontSize="20"
                 TextAlignment="Left"
                 Grid.Column="0"
                 TextWrapping="Wrap"
                 Background="#FF72747C"
                 Margin="5,5,5,5">
            <Bold Foreground="#FFD19220" >Film name</Bold>
        </TextBlock>

        <TextBlock FontSize="20"
                 TextAlignment="Left"
                 Grid.Column="1"
                 Grid.Row="0"
                 TextWrapping="Wrap"
                 Background="#FF72747C"
                 Margin="5,5,5,5">
            <Bold Foreground="#FFD19220" >Film name czech</Bold>
        </TextBlock>

        <TextBlock FontSize="20"
                 TextAlignment="Left"
                 Grid.Row="1"
                 Grid.Column="0"
                 TextWrapping="Wrap"    
                 Background="#FF72747C"
                 Margin="5,5,5,5">
            <Bold Foreground="#FFD19220" >Country</Bold>
        </TextBlock>

        <TextBlock FontSize="20"
                 TextAlignment="Left"
                 Grid.Row="1"
                 Grid.Column="1"
                 TextWrapping="Wrap"    
                 Background="#FF72747C"
                 Margin="5,5,5,5">
            <Bold Foreground="#FFD19220" >Gendre</Bold>
        </TextBlock>

        <TextBlock FontSize="20"
                 TextAlignment="Left"
                 Grid.Column="0"
                   Grid.Row="2"
                 TextWrapping="Wrap"
                 Background="#FF72747C"
                 Margin="5,5,5,5">
            <Bold Foreground="#FFD19220" >Lenght</Bold>
        </TextBlock>

        <TextBlock FontSize="20"
                 TextAlignment="Left"
                 Grid.Column="1"
                   Grid.Row="2"
                 TextWrapping="Wrap"
                 Background="#FF72747C"
                 Margin="5,5,5,5">
            <Bold Foreground="#FFD19220" >Rating</Bold>
        </TextBlock>

        <TextBlock FontSize="20"
                 TextAlignment="Left"
                 Grid.Column="0"
                   Grid.Row="3"
                 TextWrapping="Wrap"
                 Background="#FF72747C"
                 Margin="5,5,5,5"
                 Grid.ColumnSpan="2"
                 Grid.RowSpan="1">
            <Bold Foreground="#FFD19220" >Destription</Bold>
        </TextBlock>

        <TextBlock Grid.Column="0"
                   Grid.Row="4"
                   FontSize="20"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center" Height="27" Width="71">
            <Bold Foreground="Orange">Ratings</Bold>
        </TextBlock>

        <ScrollViewer Grid.Row="5"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Background="#FF72747C"
            Grid.RowSpan="2"
            Margin="5,5,5,5">
            <StackPanel Name="sp1"/>
            <!-- TODO: adding elements from database -->
        </ScrollViewer>

        <TextBlock Grid.Column="3"
                   Grid.Row="4"
                   FontSize="20"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center" Margin="5">
            <Bold Foreground="Orange">Directors</Bold>
        </TextBlock>

        <ScrollViewer Grid.Row="5"
            Grid.Column="2"
            Grid.ColumnSpan="1"
            Background="#FF72747C"
            Grid.RowSpan="1"
            Margin="5">
            <StackPanel/>
            <!-- TODO: adding elements from database -->
        </ScrollViewer>

        <TextBlock Grid.Column="2"
                   Grid.Row="4"
                   FontSize="20"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center" Margin="6,0,0,0">
            <Bold Foreground="Orange">Actors</Bold>
        </TextBlock>

        <ScrollViewer Grid.Row="5"
            Grid.Column="3"
            Grid.ColumnSpan="1"
            Background="#FF72747C"
            Grid.RowSpan="1"
            Margin="5,5,5,5">
            <StackPanel/>
            <!-- TODO: adding elements from database -->
        </ScrollViewer>

        <Image Grid.Column="2" Grid.Row="1" Grid.RowSpan="3" Grid.ColumnSpan="2" Margin="5"/>

        <Button Grid.Column="2" 
                Grid.Row="6" 
                Margin="5" 
                Background="Bisque">
            <TextBlock FontSize="20"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                   <Bold Foreground="Black"> Edit </Bold>
            </TextBlock>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" 
                            Value="10"/>
                </Style>
            </Button.Resources>
        </Button>

        <Button Grid.Column="3" 
                Grid.Row="6" 
                Margin="5" 
                Background="Bisque">
            <TextBlock FontSize="20"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                   <Bold Foreground="Black"> Back </Bold>
            </TextBlock>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" 
                            Value="10"/>
                </Style>
            </Button.Resources>
        </Button>

    </Grid>
</Window>
